@model IEnumerable<AuthIdentity.Models.HomeViewModels.ClientViewModel>;
@using System.Globalization;
@{
    CultureInfo ptBR = new CultureInfo("pt-BR");
    ViewBag.SubTitle = "Listagem de Clientes";
}


<style>
    .painel:hover {

    background: rgb(182, 181, 181);
    -webkit-transition: background-color 0.7s ease-out;
    -moz-transition: background-color 0.7s ease-out;
    -o-transition: background-color 0.7s ease-out;
    transition: background-color 0.7s ease-out;
              
  }

  #btnNew {
    position:absolute;left:0;top:50%;
  }

  #btnView {
    position:absolute;right:0;top:50%;
  }

  #search-query{
      margin-bottom: 5px;
  }
</style>

<div class="filter col-md-12">
    <h4>@ViewBag.SubTitle</h4>
    <div class="input-group" style="">        
        <input type="text" placeholder="Pesquisar" class="form-control" aria-describedby="search-query">
        <span class="input-group-addon" id="search-query"><span class="glyphicon glyphicon-search"></span></span>
    </div>
        
</div> 


@foreach(var item in Model)
{
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 ">
        <div class="panel panel-default " style="background: black; min-width: 140px; min-height: 140px; border: none; padding-top: 10px;">
            @{var idPainel = "painel-0";}
            <div class="panel-heading painel" data-idPainel="@idPainel" id="@idPainel" >
                <div class="top row" style="margin-bottom: 5px;">
                    <span class="col-md-2" style="margin: 0;  font-size: x-small; "> @item.Id </span>
                    <span class="col-md-4" style="margin: 0;  font-size: small;"> @item.Name </span>
                    <span class="col-md-4" style="margin: 0;  font-size: small;"> @item.Type </span>

                </div>
                <div class="mid" style="margin-bottom: 5px; display: block;">
                    <span class="text-right" style="margin: 0;  font-size: x-small; "> @item.SalesRegion </span>
                    <span class="text-right" style="margin: 0;  font-size: x-small; "> @item.City</span>

                </div>

                <div class="bot" >
                     <span class="text-right" style="margin: 0;  font-size: x-small; "> @item.Limit.ToString("C2", ptBR)</span>               

                </div>
                
                <br/>


                <div class="">

                    @{var btnNew =  "btnNew"; var btnView = "btnView";}
                    <button class="btn btn-primary btn-lg" data-btnNew="@btnNew" id="btnNew" style="display: none;">teste</button>
                    <button class="btn btn-primary btn-lg" data-btnView="@btnView"  id="btnView" style="display: none;  " >teste2</button>               
                </div>      
                    
            </div> 
                    
        </div>

    </div>

}